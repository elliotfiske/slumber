#include "glm/glm.hpp"
using namespace glm;

class Actor {
public:
	Actor(vec3 center_, vec3 direction_, double velocityScale, double radius);
	vec3 center;
	vec3 direction;
	double velocityScalar;
	double boundSphereRad;
	
	void step(double dt);
	bool detectIntersect(Actor target);
	void draw();
};


